    </resultMap>

    <select id="selectOutTime" parameterType="Livestock" resultMap="LivestockOutTime">
        SELECT  DISTINCT out_time  FROM livestock
        <if test="fieldId != null and fieldId != ''">
            where field_id = #{fieldId}
        </if>

